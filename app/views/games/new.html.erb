<h1>New Game</h1>

<div class="container">

    <% @letters.each do |letter| %>
       <div class="letter">
       <%= letter.capitalize %>
     </div>
    <%end%>
</div>

<div>
<h2>What is the longest word you can find?</h2>
  <form action="/score" method="post">
    <input type="text" name="word" value="<%= params[:word] %>">
    <input type="submit" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
